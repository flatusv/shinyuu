    <main>
        <div class="container-fluid">
            <div class="row spende-area">
                <div class="col-md-4"></div>
                <div class="col-md-4"><form action="#">
                    <h1 class="medium-header">Spenden zum Wohl der Tiere</h1><br><br>
                    <hr>
                    <form>
                        <div class="form-group">
                          <label for="validationCustom01">Betrag (in €)</label>
                          <input type="text" class="form-control" id="betrag" placeholder="Jeder Betrag ist angemesssen!">
                        </div>
                        <div class="form-group">
                          <label for="validationCustom02">Rhytmus</label>
                          <select class="custom-select">
                                <option selected>wählen Sie einen Rhytmus</option>
                                <option value="1">einmalig</option>
                                <option value="1">wöchentlich</option>
                                <option value="2">monatlich</option>
                                <option value="3">vierteljährlich</option>
                                <option value="3">halbjährlich</option>
                                <option value="3">jährlich</option>
                           </select>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                Anrede:
                            </div>
                            <div class="form-group col-md-4">
                                   <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">Herr</label>
                                   </div>
                            </div>
                            <div class="form-group col-md-4">
                                   <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">Frau</label>
                                   </div>
                            </div>
                        </div>
                        <div class="form-row">
                          <div class="form-group col-md-6">
                           <label for="validationCustom03">Nachname</label>
                            <input type="text" class="form-control" id="validationCustom03" placeholder="Nachname">
                          </div>
                          <div class="form-group col-md-6">
                            <label for="validationCustom04">Vorname</label>
                            <input type="text" class="form-control" id="vname" placeholder="Vorname">
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="inputEmail4">Email</label>
                          <input type="email" class="form-control" id="inputEmail4" placeholder="contact@example.com">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                Zahlungsart:
                            </div>
                            <div class="form-group col-md-3">
                                   <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">Lastschrift</label>
                                   </div>
                            </div>
                            <div class="form-group col-md-3">
                                   <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">PayPal</label>
                                   </div>
                            </div>
                            <div class="form-group col-md-3">
                                   <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option1" checked>
                                        <label class="form-check-label" for="exampleRadios1">Visa</label>
                                   </div>
                            </div>
                        </div>
                        <input id="myButton" type="submit" value="Abschicken">
                    </form>
